# ===========================================
# Environment Variables - Sentiment Analysis
# ===========================================
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Model Configuration
MODEL_PATH=/app/models
DATA_PATH=/app/data
LOG_PATH=/app/logs

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DB=sentiment_db

# Docker Hub (for CI/CD)
DOCKERHUB_USERNAME=your-dockerhub-username
DOCKERHUB_REPO=sentiment-analysis-api
